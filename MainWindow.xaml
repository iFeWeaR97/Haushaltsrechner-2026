<Window x:Class="WPF_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"

        Title="Haushaltsplaner" Height="650" Width="800"
        MinHeight="400" MinWidth="550">

    <Window.Background>
        <ImageBrush ImageSource="Pictures/background.jpg"
                    Stretch="UniformToFill"
                    Opacity="0.6"/>

    </Window.Background>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="4"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style TargetType="oxy:PlotView">
            <Setter Property="Background" Value="Transparent"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Menü -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Datei">
                <MenuItem Header="_Öffnen"/>
                <MenuItem Header="_Speichern"/>
                <Separator/>
                <MenuItem Header="_Beenden"/>
            </MenuItem>
        </Menu>

        <!-- Titel -->
        <Label Content="Haushaltsplaner 2026"
               DockPanel.Dock="Top"
               HorizontalContentAlignment="Center"
               FontSize="30"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
            <!-- Hauptbereich -->
            <Grid Margin="10" ShowGridLines="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Buttons -->
                <StackPanel Grid.Row="0"
                            Grid.ColumnSpan="2"
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Margin="5"
                            Padding="10"
                            Content="Haushaltsplaner"
                            FontSize="20"
                            Click="Button_open_finance"/>
                    <Button Margin="5"
                            Padding="10"
                            Content="Rechner"
                            Click="Button_open_calc"
                            FontSize="20"/>
                    <Button Margin="5"
                            Padding="10"
                            Content="Diagramm"
                            FontSize="20"
                            Click="Button_open_diagramm"
                            />
                </StackPanel>

                <StackPanel Grid.Row="1"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">

                    <!-- Ausgaben hinzufügen -->
                    <StackPanel x:Name="Show_expenses"
                                Orientation="Vertical"
                                Grid.Row="1"
                                Grid.Column="0"
                                Visibility="Collapsed">
                        <Button Content="Ausgabe hinzufügen"
                                Width="250"
                                Height="35"
                                HorizontalAlignment="Left"
                                Margin="5 0 5 20"
                                FontFamily="Arial Black"
                                FontSize="20"
                                Click="Button_add_expenses"/>

                        <!-- Ausgaben hinzufügen per Knopfdruck  -->
                        <ItemsControl ItemsSource="{Binding Expenses}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox Text="{Binding Name}"
                                                 Background="AntiqueWhite"
                                                 Foreground="YellowGreen"
                                                 FontFamily="Arial"
                                                 FontSize="24"
                                                 Margin="2 2 2 2"
                                                 BorderBrush="Black"
                                                 BorderThickness="3"/>
                                        <TextBox Text="{Binding Betrag}"
                                                 Background="AntiqueWhite"
                                                 Foreground="Red"
                                                 FontFamily="Arial"
                                                 FontSize="24"
                                                 Margin="2 2 2 2"
                                                 BorderBrush="Black"
                                                 BorderThickness="3"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Einnahmen hinzufügen -->
                    <StackPanel x:Name="Show_incomes"
                                Orientation="Vertical"
                                Grid.Row="1"
                                Grid.Column="1"
                                Visibility="Collapsed">
                        <Button Content="Einnahmen hinzufügen"
                                Width="250"
                                Height="35"
                                HorizontalAlignment="Left"
                                Margin="5 0 5 20"
                                FontFamily="Arial Black"
                                FontSize="20"
                                Click="Button_add_incomes"/>

                        <!-- Einnahmenhinzufügen per Knopfdruck  -->
                        <ItemsControl ItemsSource="{Binding Incomes}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox Text="{Binding Name_income}"
                                                 Background="AntiqueWhite"
                                                 Foreground="YellowGreen"
                                                 FontFamily="Arial"
                                                 FontSize="24"
                                                 Margin="2 2 2 2"
                                                 BorderBrush="Black"
                                                 BorderThickness="3"/>
                                        <TextBox Text="{Binding Betrag_income}"
                                                 Background="AntiqueWhite"
                                                 Foreground="Green"
                                                 FontFamily="Arial"
                                                 FontSize="24"
                                                 Margin="2 2 2 2"
                                                 BorderBrush="Black"
                                                 BorderThickness="3"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>

                <!-- Eingabe für Diagramm -->

                <StackPanel Grid.Row="1"
                            Grid.Column="2"
                            Orientation="Vertical"
                            Visibility="Collapsed"
                            x:Name="Show_Input"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Label Content="Ausgaben:"
                           FontSize="23"
                           Background="AntiqueWhite"
                           Opacity="0.5"/>
                    <StackPanel Orientation="Vertical"
                                Width="Auto"
                                Height="Auto">
                        <TextBox ToolTip="Bitte Betrag eingeben"
                                 x:Name="userInputAusgaben"
                                 BorderBrush="Black"
                                 BorderThickness="2"
                                 Background="AntiqueWhite"/>
                        <Button Content="Bestätigen"
                                Click="Button_choose_date"
                                BorderBrush="Black"
                                BorderThickness="2"
                                Background="AntiqueWhite"/>
                        <Button Content="Löschen"
                                Click="Button_delete_diagramm"
                                BorderBrush="Black"
                                BorderThickness="2"
                                Background="AntiqueWhite"/>
                    </StackPanel>
                </StackPanel>

                <!-- Diagramm -->
                <oxy:PlotView Grid.Row="2"
                              Grid.Column="0"
                              x:Name="MyPlot"
                              Model="{Binding PlotModel}"
                              Margin="5"
                              Visibility="Collapsed"
                              MinHeight="500"
                              MinWidth="500"/>

                <!-- Rechner -->
                <StackPanel Grid.Row="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            x:Name="Show_calc"
                            Visibility="Visible" Background="SlateGray">

                    <!-- Ergebnisanzeige -->
                    <Label Content="Result"
                           FontSize="40"
                           HorizontalAlignment="Center"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           Background="DimGray"
                           Foreground="White"
                           BorderThickness="3"
                           x:Name="Calc_Result"
                           Height="100"
                           Width="320"
                           />

                    <!--- Erste Reihe -->
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="2"
                                Grid.ColumnSpan="1"
                                HorizontalAlignment="Center">

                        <Button Content="0"
                                Width="80"
                                Height="80"
                                Click="Calculator_Buttons"/>
                        <Button Content="1"
                                Width="80"
                                Height="80"
                                Click="Calculator_Buttons"/>
                        <Button Content="2"
                                Width="80"
                                Height="80"
                                Click="Calculator_Buttons"/>
                        <Button Content="3"
                                Width="80"
                                Height="80"
                                Click="Calculator_Buttons"/>
                    </StackPanel>
                    <!--- Zweite Reihe -->
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="3"
                                Grid.ColumnSpan="1"
                                HorizontalAlignment="Center">
                        <Button Content="4"
                                Width="80"
                                Height="80"
                                Click="Calculator_Buttons"/>
                        <Button Content="5"
                                Width="80"
                                Height="80"
                                Click="Calculator_Buttons"/>
                        <Button Content="6"
                                Width="80"
                                Height="80"
                                Click="Calculator_Buttons"/>
                        <Button Content="7"
                                Width="80"
                                Height="80"
                                Click="Calculator_Buttons"/>

                    </StackPanel>

                    <!--- Dritte Reihe -->
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="4"
                                Grid.ColumnSpan="1"
                                HorizontalAlignment="Center">
                        <Button Content="8"
                                Width="80"
                                Height="80"
                                Click="Calculator_Buttons"/>
                        <Button Content="9"
                                Width="80"
                                Height="80"
                                Click="Calculator_Buttons"/>
                        <Button Content="+"
                                Width="80"
                                Height="80"
                                Click="Calculator_Buttons"/>
                        <Button Content="-"
                                Width="80"
                                Height="80"
                                Click="Calculator_Buttons"/>
                    </StackPanel>

                    <!--- Operationen Reihe -->
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="5"
                                Grid.ColumnSpan="1"
                                HorizontalAlignment="Center">
                        <Button Content="x"
                                Width="80"
                                Height="80"
                                Click="Calculator_Buttons"/>
                        <Button Content=":"
                                Width="80"
                                Height="80"
                                Click="Calculator_Buttons"/>
                        <Button Content="DEL"
                                Width="80"
                                Height="80"
                                Click="Calculator_Buttons"/>
                        <Button Content="AC"
                                Width="80"
                                Height="80"
                                Click="Calculator_Buttons"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</Window>
